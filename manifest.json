{
  "manifest_version": 2,
  "name": "GitLab Manager",
  "description": "Manage your GitLab projects and todos",
  "version": "0.17.2",

  "browser_action": {
   "default_icon": "public/images/logo.png",
   "default_popup": "public/index.html"
  },

  "background": {
    "scripts": ["public/js/event.js"],
    "persistent": false
  },

  "options_ui": {
    "page": "public/options/index.html",
    "chrome_style": true
  },

  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "activeTab",
    "tabs",
    "http://*/",
    "https://*/"
  ]
}
