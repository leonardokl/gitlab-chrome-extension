{
  "manifest_version": 2,
  "name": "GitLab Manager Î²",
  "description": "Manage your GitLab projects and todos",
  "version": "0.15.0",

  "browser_action": {
   "default_icon": "public/images/logo.png",
   "default_popup": "public/index.html"
  },

  "background": {
    "scripts": ["public/js/event.js"],
    "persistent": false
  },

  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "activeTab",
    "tabs",
    "https://gitlab.com/*"
  ]
}
